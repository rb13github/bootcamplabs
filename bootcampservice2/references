docker build –t rb4docker/<imagename>:<version> .
docker build –t rb4docker/spring-demo-app:v1.0 .

docker build –t rb4docker/bootcamp_ms1_manage-coversion:v1.0 .

docker build –t rb4docker/bootcamp_ms2_conversionfactor:v1.0 .
 docker run -d -p 8091:8080 rb4docker/bootcamp_ms2_conversionfactor:v1.0
 
docker login --username=rb4docker
Password:<check local laptop>
Docker push rb4docker/spring-demo-app:v1.1
 
 
